# Example environment for Twilightio
# Copy to `.env` at the repo root for backend and `.env.local` for frontend

# Backend (.env)
RAILWAY_ENVIRONMENT=development
PORT=5000
SECRET_KEY=
# Required: set a strong random value before deploying
JWT_SECRET=
CORS_ORIGINS=http://localhost:5173

# Feature flags (0=disabled, 1=enabled)
ENABLE_GOOGLE_OAUTH=0
ENABLE_REGISTRATION=0
# Scheduler (set to 1 in production to enable reminder scheduling)
ENABLE_SCHEDULER=0

# Admin User (optional - if not set, a random password will be generated and logged)
# ADMIN_PASSWORD=your-secure-password-here

# Self-host defaults
DEFAULT_SELF_HOST_ID=selfhost_default_user

# Database (optional; defaults to data/twilightio.db)
# DATABASE_PATH=

# Google OAuth (only if ENABLE_GOOGLE_OAUTH=1)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=

# Email Configuration
# EMAIL_PROVIDER: "sendgrid", "smtp", or "none" (default: none)
EMAIL_PROVIDER=none
# EMAIL_API_KEY= # Required for SendGrid
EMAIL_FROM_ADDRESS=noreply@twilightio.app
EMAIL_FROM_NAME=Twilightio
# SMTP settings (only if EMAIL_PROVIDER=smtp)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_USE_TLS=true
# Base URL for links in emails (password reset, verification)
APP_URL=http://localhost:5173

# Frontend (.env.local)
VITE_API_URL=http://localhost:5000
# If enabling Google OAuth, also set on the frontend
# VITE_GOOGLE_CLIENT_ID=
